<div class="body">
  <h1>Lista de Produtos</h1>
  {{#if lista}}

       {{#each produtos}}
       <div class="card" style="width: 18rem;">
         <img class="card-img-top" src="{{img}}">
          <div class="card-body">
        <h5 class="card-title">{{nome}}</h5>
        <p class="card-text">{{id}}</p>
        <p class="card-text">{{preco}}</p>

          <div class="row g-1">
            <div class="">
              <form action="/editar_produto" method="post">
              <input type="hidden" name="id" value="{{id}}">
              <button class="w-150 btn btn-info ">Editar</button>
              </form>
            </div>
            <div class="">
                <form action="/delete_produto" method="post">
                 <input type="hidden" name="id" value="{{id}}">
              <button class="w-150 btn btn-danger">Deletar</button>
              </form>
            </div>
          </div>
           </div>
</div>
      {{/each}}
 
  {{else}}
  <div class="card mt-4">
    <div class="card-body">
      Nenhum dado encontrado
    </div>
  </div>
  {{/if}}
</div>