<div class="p-5 rounded mt-3">
  <h1>Lista de Produto</h1>
  {{#if table}}
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">#ID</th>
        <th scope="col">Nome</th>
        <th scope="col">Pre√ßo</th>
        <th scope="col">Imagen</th>
      </tr>
    </thead>
    <tbody>
      {{#each produtos}}
      <tr>
        <th scope="row">{{id}}</th>
         <td><img src="{{img}}" class="img-thumb"></td>
        <td>{{nome}}</td>
        <td>{{preco}}</td>
        <td>
          <div class="row g-1">
            <div class="col-6 col-md-3">
              <form action="/editar_produto" method="post">
              <input type="hidden" name="id" value="{{id}}">
              <button class="w-100 btn btn-info">Editar</button>
              </form>
            </div>

             <div class="col-6 col-md-3 mx-1">
                <form action="/delete_produto" method="post">
                 <input type="hidden" name="id" value="{{id}}">
              <button class="btn btn-danger">Deletar</button>
          </div>
          
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  {{else}}
  <div class="card mt-4">
    <div class="card-body">
      Nenhum dado encontrado
    </div>
  </div>
  {{/if}}
</div>
